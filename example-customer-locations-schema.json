{
    "roles": [
        {
            "name": "customer",
            "label": "Customer",
            "source_table": "c_bpartner",
            "linked_tables": [
                {
                    "name": "locations",
                    "from": "c_bpartner_location",
                    "join_on": "c_bpartner_id",
                    "to": "l_location",
                    "to_key": "l_location_id",
                    "fields": [
                        "name",
                        "phone",
                        "phone2",
                        "isbillto",
                        "isshipto",
                        "l_location.street_address_1",
                        "l_location.street_address_2"
                    ],
                    "where": "is_active = true",
                    "order": "name"
                }
            ]
        }
    ]
}